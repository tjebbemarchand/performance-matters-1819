<% include ../partials/header %>

<% if (data) { %>

    <div data-id="<%= data.isbn %>" class="details-overview">
        <div class="details-overview__img">
            <img src="<%= data.cover_image %>"></img>
        </div>
        <div class="details-overview__details">
            <h2 class="details__title"><%= data.title %></h2>
            <h3 class="details__author"><%= data.author %></h3>
            <p class="details__description"><%= data.description %></p>
            <ul class="details__information">
                <li><%= data.language %></li>
                <li><%= data.publisher %></li>
                <li><%= data.publication_year %></li>
            </ul>
            <form class="add-to-favorites">
                <input type="checkbox" name="heart" id="heart" class="css-checkbox" /><label for="heart" class="css-label">Voeg toe aan favorieten</label>
                <button type="submit">Voeg toe</button>
            </form>
        </div>
    </div>

<% } %>

<% include ../partials/footer %>